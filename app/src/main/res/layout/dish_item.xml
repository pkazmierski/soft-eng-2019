<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/relative_layout_dishes"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_margin="4dp"
        android:autoSizeTextType="uniform"
        android:background="#EBE3C4">

        <ImageButton
            android:id="@+id/button_add_to_calendar_food"
            android:layout_width="93dp"
            android:layout_height="42dp"
            android:layout_below="@+id/dishNameTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="-120dp"
            android:contentDescription="@string/dishes"
            android:onClick="addToCalendar"
            app:srcCompat="@drawable/button_add_to_calendar_food" />

        <ImageView
            android:id="@+id/dishImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/dishes"
            android:padding="4dp" />

        <TextView
            android:id="@+id/dishNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="75dp"
            android:layout_toEndOf="@+id/dishImageView"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:textColor="#D37432"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientsTextView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/ingredientsListTextView"
            android:layout_below="@+id/dishImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="183dp"
            android:layout_marginBottom="19dp"
            android:textColor="#D37432"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ingredientsListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/recipeTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="19dp"
            android:autoSizeTextType="uniform"
            android:textColor="#FCBA00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recipeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/recipeContentTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="254dp"
            android:layout_marginBottom="19dp"
            android:autoSizeTextType="uniform"
            android:textColor="#D37432"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recipeContentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="35dp"
            android:textColor="#898989"
            android:textSize="15sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>